#!/bin/bash

brew update
brew upgrade --all

# essentials
brew install coreutils
brew install findutils
brew install moreutils
brew install gnu-sed --with-default-names

# tmux
brew install reattach-to-user-namespace
brew install tmux

# vim
brew install ctags
brew install vim

# network
brew install netcat
brew install nmap

# media
brew install ffmpeg --with-libvpx
brew install youtube-dl

# more useful packages
brew install dark-mode

# pack
brew install p7zip
brew install unrar

# crypto
brew install gnupg
brew install keybase

# irc
brew install weechat --with-aspell --with-curl --with-python \
                     --with-perl --with-ruby --with-lua

# cask
brew install caskroom/cask/brew-cask

# casks
brew cask install anki
brew cask install chronicle
brew cask install cog
brew cask install kid3
brew cask install macpass
brew cask install mediathekview
brew cask install spek
brew cask install steam
brew cask install transmission
brew cask install vlc

