#!/bin/bash

brew update
brew upgrade --all

# system
brew install coreutils --with-default-names
brew install findutils
brew install moreutils
brew install gnu-sed --with-default-names

# tmux
brew install tmux

# vim
brew install ctags
brew install vim

# monitoring
brew install htop
brew install netcat
brew install nmap

# media
brew install ffmpeg --with-libvpx --with-libvorbis --with-libopus
brew install youtube-dl

# development
brew install jq

# pack
brew install p7zip
brew install unrar

# crypto
brew install gnupg
brew install keybase

# irc
brew install weechat --with-aspell --with-curl --with-python \
                     --with-perl --with-ruby --with-lua

# sync
brew install syncthing

# cask
brew install caskroom/cask/brew-cask

# casks
casks=(
  1password db-browser-for-sqlite macdown macpass
  qsyncthingtray skype slack steam vagrant vlc yed
)

for cask in "${casks[@]}"; do
    brew cask install "$cask"
done

